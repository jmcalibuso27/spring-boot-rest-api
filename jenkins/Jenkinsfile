pipeline {
    agent any
    stages {
        
        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage("build & SonarQube analysis") {
            agent any
            steps {
              echo 'Hello world'
              bat 'mvn clean verify sonar:sonar -Dsonar.projectKey=spring-boot-rest-api-test -Dsonar.host.url=http://localhost:9000 -Dsonar.login=c85bc0f5a2f3a483e8cf2042910036e132bd157b'
            }
          }
          stage("Quality Gate") {
            steps {
              timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true
              }
            }
          }

        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }
        
        stage('Copy to documents') {
            steps {
                bat 'copy %WORKSPACE%\\target\\*.jar C:\\Users\\collabera\\Documents'
            }
        }
    }
    post {
	    always {
	      bat 'copy %JENKINS_HOME%\\jobs\\%JOB_NAME%\\builds\\%BUILD_NUMBER%\\log C:\\Users\\collabera\\Documents\\log.txt'
	    }
	}
}